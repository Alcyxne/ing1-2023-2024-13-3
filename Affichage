BITMAP *backgroundmenu = load_bitmap("quest.bmp", NULL);
    if (!backgroundmenu) {
        allegro_message("Erreur de chargement de l'image de fond");
        allegro_exit();
        exit(EXIT_FAILURE);
    }

    BITMAP *bouton_menu_jouer = load_bitmap(".bois.bmp", NULL);
    if (!bouton_menu_jouer) {
        allegro_message("Erreur de chargement de l'image du bouton menu Jouer");
        destroy_bitmap(backgroundmenu);
        allegro_exit();
        exit(EXIT_FAILURE);
    }

    int bouton_x = (SCREEN_WIDTH - bouton_menu_jouer->w) / 2;        // Calcul des positions pour centrer le bouton "Jouer"
    int bouton_y = (SCREEN_HEIGHT - bouton_menu_jouer->h) / 2;

    // Dessin du fond
    blit(backgroundmenu, screen, 0, 0, 0, 0, SCREEN_WIDTH, SCREEN_HEIGHT);
    // Dessin du bouton "Jouer"
    draw_sprite(screen, bouton_menu_jouer, bouton_x, bouton_y);
    // Libération de la mémoire des images chargées
    destroy_bitmap(backgroundmenu);
    destroy_bitmap(bouton_menu_jouer);
}
